<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Notícias</title>
		</head>
	<body>

		<h1>Notícias</h1>

		<table>
			<tr>
				<td>ID</td>
				<td>Título</td>
				<td>Texto</td>
				<td>Autor</td>
				<td>Resumo</td>
				<td>Data da notícia</td>
			</tr>

			<% for(index = 0; index < noticias.length; index++){ %>
					<tr>
						<td><%=noticias[index].ID_NOTICIA %></td>
						<td><%=noticias[index].TITULO %></td>
						<td><%=noticias[index].NOTICIA %></td>
						<td><%=noticias[index].autor %></td>
						<td><%=noticias[index].resumo %></td>
						<td><%=noticias[index].datanoticia %></td>
					</tr>
			<% } %>
		</table>

	</body>
</html>